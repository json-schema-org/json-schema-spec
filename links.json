{
    "$schema": "http://json-schema.org/draft-08/hyper-schema#",
    "$id": "http://json-schema.org/draft-08/links",
    "title": "Link Description Object",
    "allOf": [
        { "required": [ "rel", "href" ] },
        { "$ref": "#/$defs/noRequiredFields" }
    ],
    "$defs": {
        "noRequiredFields": {
            "type": "object",
            "properties": {
                "anchor": {
                    "type": "string",
                    "format": "uri-template"
                },
                "anchorPointer": {
                    "type": "string",
                    "anyOf": [
                        { "format": "json-pointer" },
                        { "format": "relative-json-pointer" }
                    ]
                },
                "rel": {
                    "type": "string"
                },
                "href": {
                    "type": "string",
                    "format": "uri-template"
                },
                "hrefSchema": {
                    "$recursiveRef": "http://json-schema.org/draft-08/hyper-schema"
                },
                "templatePointers": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string",
                        "anyOf": [
                            { "format": "json-pointer" },
                            { "format": "relative-json-pointer" }
                        ]
                    }
                },
                "templateRequired": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "targetSchema": {
                    "$recursiveRef": "http://json-schema.org/draft-08/hyper-schema"
                },
                "targetMediaType": {
                    "type": "string"
                },
                "targetHints": { },
                "headerSchema": {
                    "$recursiveRef": "http://json-schema.org/draft-08/hyper-schema"
                },
                "submissionMediaType": {
                    "type": "string",
                    "default": "application/json"
                },
                "submissionSchema": {
                    "$recursiveRef": "http://json-schema.org/draft-08/hyper-schema"
                },
                "$comment": {
                    "type": "string"
                }
            }
        }
    }
}
