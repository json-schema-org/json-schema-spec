{
    "$schema": "https://json-schema.org/draft/next/schema",
    "$id": "https://json-schema.org/draft/next/meta/validation",
    "$dynamicAnchor": "meta",

    "title": "Validation vocabulary meta-schema",
    "type": ["object", "boolean", "string"],
    "format": "iri-reference",
    "properties": {
        "type": {
            "anyOf": [
                "#/$defs/simpleTypes",
                {
                    "type": "array",
                    "items": "#/$defs/simpleTypes",
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "const": true,
        "enum": {
            "type": "array",
            "items": true
        },
        "multipleOf": {
            "type": "number",
            "exclusiveMinimum": 0
        },
        "maximum": {
            "type": "number"
        },
        "exclusiveMaximum": {
            "type": "number"
        },
        "minimum": {
            "type": "number"
        },
        "exclusiveMinimum": {
            "type": "number"
        },
        "maxLength": "#/$defs/nonNegativeInteger",
        "minLength": "#/$defs/nonNegativeIntegerDefault0",
        "pattern": {
            "type": "string",
            "format": "regex"
        },
        "maxItems": "#/$defs/nonNegativeInteger",
        "minItems": "#/$defs/nonNegativeIntegerDefault0",
        "uniqueItems": {
            "type": "boolean",
            "default": false
        },
        "maxProperties": "#/$defs/nonNegativeInteger",
        "minProperties": "#/$defs/nonNegativeIntegerDefault0",
        "required": "#/$defs/stringArray",
        "dependentRequired": {
            "type": "object",
            "additionalProperties": "#/$defs/stringArray"
        }
    },
    "$defs": {
        "nonNegativeInteger": {
            "type": "integer",
            "minimum": 0
        },
        "nonNegativeIntegerDefault0": {
            "$ref": "#/$defs/nonNegativeInteger",
            "default": 0
        },
        "simpleTypes": {
            "enum": [
                "array",
                "boolean",
                "integer",
                "null",
                "number",
                "object",
                "string"
            ]
        },
        "stringArray": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true,
            "default": []
        }
    }
}
