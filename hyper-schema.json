{
    "$schema": "http://json-schema.org/draft-08/hyper-schema#",
    "$id": "http://json-schema.org/draft-08/hyper-schema",
    "$recursiveRoot": true,

    "title": "JSON Hyper-Schema",
    "$ref": "http://json-schema.org/draft-08/schema",
    "properties": {
        "base": {
            "type": "string",
            "format": "uri-template"
        },
        "links": {
            "type": "array",
            "items": {
                "$ref": "http://json-schema.org/draft-08/links"
            }
        }
    },
    "links": [
        {
            "rel": "self",
            "href": "{+%24id}"
        }
    ]
}
